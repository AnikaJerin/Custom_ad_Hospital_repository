<?xml version="1.0" encoding="UTF-8"?>
<odoo>
      <record id="hospital_doctor_tree" model="ir.ui.view">
        <field name="name">hospital.doctor.tree</field>
        <field name="model">hospital.doctor</field>
        <field name="arch" type="xml">
            <tree string="Doctor">
                <field name="name"/>
                <field name="doctor_gender"/>
            </tree>
        </field>
    </record>

     <record id="hospital_doctor_form" model="ir.ui.view">
        <field name="name">hospital.doctor.form</field>
        <field name="model">hospital.doctor</field>

        <field name="arch" type="xml">
            <form string="Patients">
                <sheet>
                    <group>
                        <group>
                            <field name="name"/>
                        </group>
                        <group>
                            <field name="doctor_gender"/>
                            <field name="user_id"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
     </record>

    <record id="action_doctor" model="ir.actions.act_window" >
        <field name="name">Doctor</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">hospital.doctor</field>

        <field name="view_mode">tree,form</field>
        <field name="help" type="html">

            <p class="o_view_nocontent_smiling_face">
                Create first patient!
            </p>
        </field>


    </record>
    <menuitem id="hospital_doctor" name="Doctor" parent="hospital_root" action="action_doctor" sequence="2"/>

</odoo>