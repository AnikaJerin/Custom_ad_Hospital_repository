            <t t-foreach="docs" t-as="doc">
                <h2>Patient Card </h2>
                <br/>
                <br/>
                <h><t t-esc="doc.patient_name"/>

                </h>
                <img alt="Barcode" t-att-src="'/report/barcode/?type=%s&amp;value=%s&amp;width=%s&amp;height=%s' % ('EAN13', doc.patient_name, 600, 150)" style="width:100%;height::4rem;"/>

                <h2>Test</h2>
            </t>
        </t>



   </template>


